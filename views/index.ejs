<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <ul>
      <% messages.forEach((msg) => { %>
        <li>
          <div>User: <%= msg.user %></div>
          <div>Message: <%= msg.text %></div>
          <div>Date: <%= msg.added %></div>
        </li>
      <% }); %>
    </ul>
    <a href="/new">Add New Message</a>
  </body>
</html>
